{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "_comment": "This config was generated using 'stryker init'. Please see the guide for more information: https://stryker-mutator.io/docs/stryker-js/guides/react",
  "testRunner": "vitest",
  "incremental": true,
  "incrementalFile": "reports/mutation/stryker-incremental.json",
  "checkers": ["typescript"],
  "tsconfigFile": "tsconfig.json",
  "ignorePatterns": ["docs", ".husky", ".vscode", "src/main.tsx", "src/App.tsx"],
  "reporters": ["progress", "clear-text", "html"],
  "htmlReporter": {
    "fileName": "reports/mutation/mutation.html"
  },
  "concurrency": 1,
  "coverageAnalysis": "off",
  "thresholds": {
    "high": 100,
    "low": 90,
    "break": 90
  },
  "cleanTempDir": true
}
