{
  "name": "poe-na-conta-front",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "test": "vitest run",
    "test:unit": "vitest run --config vite.config.js",
    "test:watch": "vitest watch",
    "test:mutation": "stryker run",
    "build": "tsc -b && vite build",
    "ts:check": "tsc --noEmit -p tsconfig.app.json",
    "typescript:check": "tsc --noEmit -p tsconfig.app.json",
    "lint": "eslint .",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "format:fix": "prettier -w .",
    "preview": "vite preview",
    "prepare": "husky",
    "test:preview": "vitest --workspace=vitest.workspace.preview.ts",
    "test:browser": "vitest --workspace=vitest.workspace.ts"
  },
  "dependencies": {
    "commitlint": "^19.8.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "imports": {
    "src*": "./src/*",
    "@pages*": "./src/pages/*",
    "@tests*": "./tests/*"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.23.0",
    "@stryker-mutator/jest-runner": "^8.7.1",
    "@stryker-mutator/typescript-checker": "^8.7.1",
    "@stryker-mutator/vitest-runner": "^8.7.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.13.17",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^3.1.1",
    "@vitest/coverage-istanbul": "^3.1.1",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9.23.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.5.0",
    "playwright": "^1.51.1",
    "prettier": "3.5.3",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.29.0",
    "vite": "^6.2.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1",
    "vitest-browser-react": "^0.1.1"
  }
}
